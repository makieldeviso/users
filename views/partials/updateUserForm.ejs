<form action="<% `/update/${user.id}` %>" method="POST">
  <label for="firstName">First Name:</label>
  <input type="text" name="firstName" id="firstName" class="update-field" value="<%= user.firstName %>">

  <label for="lastName">Last Name:</label>
  <input type="text" name="lastName" id="lastName" class="update-field" value="<%= user.lastName %>">

  <label for="email">E-mail:</label>
  <input type="text" name="email" id="email" value="<%=user.email%>">

  <label for="age">Age:</label>
  <input type="number" name="age" id="age" min="18" max="120" value="<%=user.age%>">

  <label for="bio">Bio:</label>
  <textarea name="bio" id="bio"><%=user.bio%></textarea>

  <button class="link-button update-confirm" type="submit">Confirm</button>
</form>